<div class="page-header">
  <h1>
    Product at stores
    <%= link_to new_product_at_store_url, :class => "btn btn-lg btn-success" do %>
      <i class="fa fa-plus"></i>
    <% end  %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Product at stores (start typing)" class="form-control">
  </div>
</div>

<hr>

<%= form_tag products_at_store_path, method: "get" do %>
  <ul>
    <% @products.each_with_index do |p, index| %>
      <li>
        <label>
          <%= check_box_tag "groceries[]", index %>
          <%= p %>
        </label>
      </li>
    <%end %>
  </ul>

  <%= submit_tag "FILTER" %>
<% end %>


<%= @filtered_things %>
