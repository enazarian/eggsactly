<!-- Validation failure messages -->

<% if @product_category.errors.any? %>
  <% @product_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Product Category</h3>
      </div>
      <div class="panel-body">
        <%= form_tag product_categories_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for product_id -->
          <div class="form-group">
            <label for="product_id" class="col-sm-2 control-label">
              Product
            </label>
            <div class="col-sm-10">
              <input type="text" id="product_id" name="product_id" placeholder="Product" class="form-control" value="<%= @product_category.product_id %>">
            </div>
          </div>

          <!-- Label and input for category -->
          <div class="form-group">
            <label for="category" class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">
              <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @product_category.category %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Product Category" class="btn btn-success">
              or
              <a href="/product_categories">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
